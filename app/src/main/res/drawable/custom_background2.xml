<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Background color (white in this example) -->
            <corners android:radius="12dp" /> <!-- Adjust the radius to control the rounded corners -->
        </shape>
    </item>
    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#EFEFEF" /> <!-- Border color (light gray in this example) -->
            <corners android:radius="12dp" /> <!-- Match the same corner radius as the background -->
        </shape>
    </item>
</layer-list>